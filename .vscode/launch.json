{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Train Custom Model",
            "type": "debugpy",
            "request": "launch",
            "program": "models/custom_model/train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "args": [
                "-c",
                "models/custom_model/config.yaml"
            ]
        },
        {
            "name": "Evaluate Custom Model",
            "type": "debugpy",
            "request": "launch",
            "program": "models/custom_model/eval.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "args": [
                "-c",
                "models/custom_model/config.yaml"
            ]
        },
        {
            "name": "TRAIN (Accelerated) - Multi-GPU",
            "type": "debugpy",
            "request": "launch",
            "program": "models/custom_model/launch_accelerate.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1",
                "ACCELERATE_NUM_PROCESSES": "2",
                "ACCELERATE_NUM_MACHINES": "1",
                "ACCELERATE_MIXED_PRECISION": "no",
                "ACCELERATE_DYNAMO_BACKEND": "no",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "args": [
                "-c",
                "models/custom_model/config.yaml"
            ]
        }
    ]
}